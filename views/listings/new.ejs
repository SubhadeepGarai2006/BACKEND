    <script>
        let planIndex = 1;

        function addPlan() {
            const container = document.getElementById("plansContainer");

            const html = `
        <div class="plan-box mb-2">
            <input type="text" name="listing[roomPlans][${planIndex}][name]" placeholder="Plan Name" class="form-control mb-1" required>
            <input type="number" name="listing[roomPlans][${planIndex}][extraPrice]" placeholder="Extra Price" class="form-control" required>
        </div>`;

            container.insertAdjacentHTML("beforeend", html);
            planIndex++;
        }
    </script>