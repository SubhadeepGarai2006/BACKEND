<% layout("/layouts/boilerplate") %>
    <!DOCTYPE html>

    <html>

    <head>
        <title>Create Password</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body class="bg-white text-light">

        <div class="container mt-5 col-md-4">
            <div class="card p-4 shadow-lg">


                <h3 class="text-center mb-3">Create Password</h3>

                <form action="/set-password" method="POST" autocomplete="off">

                    <input type="hidden" name="email" value="<%= email %>">

                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" autocomplete="new-password" autocorrect="off" autocapitalize="off" spellcheck="false" required>

                    </div>

                    <div class="mb-3">
                        <label>Confirm Password</label>
                        <input type="password" name="confirmPassword" class="form-control" autocomplete="new-password" required>

                    </div>

                    <button class="btn btn-primary w-100">Create Account</button>
                </form>

            </div>


        </div>

    </body>

    </html>